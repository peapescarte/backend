<div class="report-wrapper">
  <.text size="h1" color="text-blue-100"><%= @form_title %></.text>
  <.simple_form for={@form} action={~p"/app/pesquisa/cadastro"} class="report-wrapper">
    <.text size="h3" color="text-blue-100"><%= @field_names[:dados] %></.text>

    <.text size="h3" color="text-blue-100">Dados Pessoais</.text>
    <div class="nav-item">
      <fieldset class="login-fieldset">
        <.text_input field={@form[:primeiro_nome]} label="Nome" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:sobrenome]} label="SobreNome" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input
          field={@form[:data_nascimento]}
          type="date"
          label="Data de Nascimento"
          required
        />
      </fieldset>
    </div>

    <div class="nav-item">
      <fieldset class="login-fieldset">
        <.text_input field={@form[:cpf]} label="CPF" required phx-hook="CpfNumberMask" />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:telefone]} type="phone" label="Telefone" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input
          field={@form[:contato_email]}
          type="email"
          placeholder="nome@uenf.br"
          label="Email"
          required
        />
      </fieldset>
    </div>
    <div class="item-secao flex-cols">
      <div class="form-group">
        <label for="exampleSelect">Tipo de Usuário</label>
        <select id="exampleSelect" class="form-control">
          <option name="tipo" value="">Administrador</option>
          <option name="tipo" value="">Pesquisador</option>
          <option name="tipo" value="">Pescador</option>
        </select>
      </div>
    </div>

    <.text size="h3" color="text-blue-100">Endereço</.text>
    <div class="nav-item">
      <fieldset class="login-fieldset">
        <.text_input field={@form[:rua]} label="Endereço" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:numero]} label="Número" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:cidade]} label="Cidade" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:cep]} placeholder="00000-00" label="CEP" required />
      </fieldset>
    </div>

    <div class="form-group flex-cols">
      <label for="exampleSelect">UF</label>
      <select id="exampleSelect" class="form-control">
        <option name="estado">RJ</option>
        <option name="estado">ES</option>
        <option name="estado">SP</option>
      </select>
    </div>

    <.text size="h3" color="text-blue-100">Vínculo Institucional</.text>
    <div class="nav-item">
      <fieldset class="login-fieldset">
        <.checkbox field={@form[:bolsa]} label="Pesquisador" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.checkbox field={@form[:bolsa]} label="Professor" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.text_input field={@form[:bolsa]} label="Técnico" required />
      </fieldset>
      <fieldset class="login-fieldset">
        <.checkbox field={@form[:bolsa]} label="Aluno" required />
      </fieldset>
    </div>
  </.simple_form>
  <div class="buttons-wrapper flex-center">
    <.button
      name="save"
      value="save-cadastro"
      style="primary"
      phx-disable-with="Salvando….."
      submit
    >
      <Lucideicons.save /> Salvar respostas
    </.button>

    <.button
      name="save"
      value="send-cadastro"
      style="primary"
      phx-disable-with="Enviando..."
      submit
    >
      <Lucideicons.send /> Enviar cadastro
    </.button>
  </div>
</div>
